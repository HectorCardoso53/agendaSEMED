rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Só o usuário com o UID especificado pode ler e escrever em todo o DB
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == "vCmrJ1fm3YXyZzl1LgJIBGEP3QG2";
    }
  }
}


